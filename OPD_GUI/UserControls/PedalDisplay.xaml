<UserControl x:Class="OPD_GUI.UserControls.PedalDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OPD_GUI.UserControls"
              Width="180" Height="280"           Background="#0f0f2d" FontFamily="Bebas Neue" FontSize="20"
             Foreground="White">
        <StackPanel>
            <Label Name="PedalTitle" Content="The Screaming Crow" 
                   Foreground="White" HorizontalAlignment="Center" ></Label>
            <Image Name="PedalImage" Width="150" Height="180" Source="/images/Pedal/1.jpg"></Image>
            <TextBlock HorizontalAlignment="Center" Name="PedalDescription">Some Description</TextBlock>
            <Button Name="AddToSC" Content="Add To Shopping Cart"></Button>
        </StackPanel>
</UserControl>
